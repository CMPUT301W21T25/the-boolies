<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_info_background"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_icon_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="8dp"
        android:clickable="true"
        tools:srcCompat="@tools:sample/avatars" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/exp_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#276678"
            android:textSize="18sp"
            android:text="This Be Doth Experiment Name"/>

        <TextView
            android:id="@+id/user_id_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8a8a8a"
            android:paddingLeft="1sp"
            android:textSize="14sp"
            android:text="UserJohnnyBoi"
            />

        <TextView
            android:id="@+id/exp_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8a8a8a"
            android:paddingLeft="1sp"
            android:textSize="12sp"
            android:text="03/12/2021" />

    </LinearLayout>

</LinearLayout>