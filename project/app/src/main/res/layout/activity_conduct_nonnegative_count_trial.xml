<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nonnegativeExpDescription"
        android:layout_width="414dp"
        android:layout_height="144dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nonnegativeCountExperimentInfo" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/nonnegativeCountExperimentInfo"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@color/custom_Yellow_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Testing Title"
        app:titleMargin="5dp"
        tools:subtitle="Testing Date" />

    <Button
        android:id="@+id/submit_trial_nonnegative_count_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirm Trial"
        android:textColor="@color/custom_Yellow_light"
        app:backgroundTint="@color/custom_Blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nonnegativeCountEntry"
        app:layout_constraintVertical_bias="0.437" />

    <EditText
        android:id="@+id/nonnegativeCountEntry"
        android:layout_width="126dp"
        android:layout_height="104dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/text_outline"
        android:ems="10"
        android:gravity="center"
        android:hint="enter count"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nonnegativeExpDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>