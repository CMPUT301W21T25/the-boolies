<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/exp_owner_image_view"
        android:layout_width="93dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:onClick="viewExpOwnerButton" />

    <TextView
        android:id="@+id/exp_name_text_view"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="Experiment Name"
        tools:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="353dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="105dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exp_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:padding="5dp"
            android:text="Description of experiment" />

        <TextView
            android:id="@+id/min_trials_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:text="Minimum Number of Trials:" />

        <TextView
            android:id="@+id/current_trials_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:text="Current Trials::" />

        <TextView
            android:id="@+id/region_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:text="Region:" />

    </LinearLayout>

    <Button
        android:id="@+id/view_data_button"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="165dp"
        android:text="view data" />

    <Button
        android:id="@+id/subscribe_button"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="54dp"
        android:layout_alignLeft="@+id/comments_button"
        android:layout_alignBottom="@id/view_data_button"
        android:text="subscribe" />

    <Button
        android:id="@+id/comments_button"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/view_data_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="234dp"
        android:layout_marginLeft="234dp"
        android:layout_marginBottom="55dp"
        android:text="Comments" />
</RelativeLayout>